@model List<AllCustomersViewModel>

<div class="row">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>Name</td>
                <td>Birth Date</td>
                <td>Young Driver</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Name</td>
                    <td>@customer.BirthDate</td>
                    <td>@customer.IsYoungDriver</td>
                </tr>
            }
        </tbody>
    </table>
</div>



