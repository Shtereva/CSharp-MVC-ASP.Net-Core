@model LoginBindingModel
@{
    ViewData["Title"] = "Login";
}

<form method="post">
    <div class="form-group">
        <label asp-for="Username"></label>
        <input type="text" asp-for="Username" class="form-control" placeholder="Enter Username">
        <span class="alert-danger" asp-validation-for="Username"></span>
    </div>
    <div class="form-group">
        <label asp-for="PasswordHash"></label>
        <input type="password" asp-for="PasswordHash" class="form-control" placeholder="Enter Password">
    </div>
    <button type="submit" class="btn btn-dark">Login</button>
    <a class="btn btn-dark" asp-page="/Index">Cancel</a>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}

